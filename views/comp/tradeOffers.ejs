<div class='col-md-12' style= "border-bottom:3px solid #847577;padding-top:10px">
  <h4 class='lead'>Trade Offers:</h4>
</div>
<table class='table'>
  <thead>
    <th>Item</th>
    <th>User</th>
    <th>View Offer</th>
  </thead>
  <tbody>
    <% for(var i = 0;i < tradeOffers.length;i++){
      var trade = tradeOffers[i];
      %>
      <tr>
        <td scope='row'>
          <div class='row'>
            <div class='col-md-3 tablePic itemContainer'>
              <img src='/img/item_pics/<%=trade.item_id%>' onerror="this.src='/img/item_pics/default'" />
            </div>
            <div class='col-md-9'>
              <h4><%=trade.itemName%></h4></br>
              Collection: <%=trade.collName%>
            </div>
          </div>
        </td>
        <td scope='row'>
          <a href='/users/<%=trade.user_id%>  text-left'>
            <div class='smallProfilePic profilePic'>
              <img src='/img/profile_pics/<%=trade.user_id%>' style='display:block' onerror="this.src='/img/profile_pics/default.jpg'">
            </div>
            <p><%=trade.username%></p>
          </a>
        </td>
        <td scope='row'>
          <button class='btn btn-primary offerBtn' data-id='<%=trade.trade_id%>' data-toggle="modal" data-target="#viewOffer">View Offer</button>
        </td>
      </tr>
    <%}%>
  </tbody>
</table>
