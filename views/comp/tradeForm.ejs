<div class="modal fade" id="tradeForm" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Make Trade</h4>
      </div>
      <div class="modal-body">
        <div class='row'>
          <div class='col-md-5'>
            <div class='row itemHead'>
              <div class='col-md-5 itemHeadPic'>
                <img src='/img/item_pics/' onerror="this.src='/img/item_pics/default'">
              </div>
              <div class='col-md-7' >
                <h1 class='lead itemName'></h1>
                <p class='itemDetail text-left'>
                  <strong>Type: </strong><span class='itemType'></span></br>
                  <strong>Condition:</strong><span class='itemCondition'></span></br>
                  <strong>Quantity: </strong><span class='quantity'></span></br></br>
                </p>
                <dl>
                  <dt>Description:</dt>
                  <dd class='pre'></br><span class='itemDesc'></span></dd>
                </dl>
              </div>
            </div>
          </div>
          <div class='col-md-7'>
            <div class='form-group' id='tradeOffer' style='position:relative'>
              <h4 class='text-center'>Your Offer</h4>
              Trade Quantity:<input type='number' value='1' min='1' id='tradeQuantity'></br></br>
              Price Offer:<input type='text' id='priceOffer'>
              <table class="table table-inverse">
                <thead>
                  <tr>
                    <th>Item Name</th>
                    <th>Quantity</th>
                    <th>X</th>
                  </tr>
                </thead>
                <tbody id='tradeItems'>

                </tbody>
              </table>
              Trade Description:
              <textarea class='form-control' id='tradeDesc'></textarea>
              <input type="text" class='form-control' id='userItemSearch' placeholder="Search Your Items" style="border-radius:0">
              <div class='searchDrop' tabindex="-1" >
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" id='sendTradeOffer'>Send Trade Offer</button>
      </div>
    </div>
  </div>
</div>
