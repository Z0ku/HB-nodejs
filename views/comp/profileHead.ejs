<div class='col-md-12 profileBack'>
  <div class='row profileHead'>
    <div class='col-md-10 col-md-offset-1 profileCont'>
      <div class='col-md-3 profilePicCont profilePicCont'>
        <a href='#'>
          <img src='/img/profile_pics/<%=user.id%>' onerror="this.src='/img/profile_pics/default.jpg'" class='profilePic'>
        </a>
      <% if(user.name == session.loginUser){%>
        <button type='button' class='btn btn-primary editBtn' id='editProfilePic'>Edit</button>
        <input type='file' id='newProfPic'>
        <input type='file' id='newBackPic' style='visibility:hidden'>
      <%}%>
      </div>
      <div class='col-md-9 profileNav'>
        <h1><%=user.name%>
          <% if(user.name == session.loginUser){%>
            <button type='button' class='btn btn-primary showEdits'>Edit</button>
            <button type='button' class='btn btn-primary editBtn' id='editBackPic'>Edit</button>
          <% }else{%>
            <button type='button' class='btn btn-success'>Add Friend</button>
          <%}%>
        </h1>

        <p>User Description</p>
        <div class='profileNavTabs'>
          <ul class="nav nav-tabs">
            <li role="presentation" ><a href="/users/<%=user.id%>">Feed</a></li>
            <li role="presentation" ><a href="/users/<%=user.id%>/collections">Collections</a></li>
            <li role="presentation" ><a href="#">Trades</a></li>
            <li role="presentation"><a href="#">Friends</a></li>
          </ul>
        </div>
    </div>
  </div>
</div>
